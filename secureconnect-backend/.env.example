# SecureConnect Backend - Environment Variables

# ===== SERVER CONFIGURATION =====
PORT=8080
HOST=0.0.0.0
ENV=development
DEBUG=true

# ===== JWT CONFIGURATION =====
JWT_SECRET=change-this-to-a-long-random-string-min-32-characters
JWT_ACCESS_DURATION_MIN=15
JWT_REFRESH_DURATION_DAYS=30

# ===== COCKROACHDB CONFIGURATION =====
DB_HOST=localhost
DB_PORT=26257
DB_USER=root
DB_PASSWORD=
DB_NAME=secureconnect
DB_SSL_MODE=disable

# ===== CASSANDRA CONFIGURATION =====
CASSANDRA_HOSTS=localhost
CASSANDRA_KEYSPACE=secureconnect_ks
CASSANDRA_USER=
CASSANDRA_PASSWORD=

# ===== REDIS CONFIGURATION =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# ===== MINIO CONFIGURATION =====
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=secureconnect-files
MINIO_USE_SSL=false

# ===== SERVICE PORTS =====
# API Gateway
API_GATEWAY_PORT=8080

# Auth Service
AUTH_SERVICE_PORT=8081

# Chat Service
CHAT_SERVICE_PORT=8082

# Video Service
VIDEO_SERVICE_PORT=8083

# Storage Service
STORAGE_SERVICE_PORT=8084
